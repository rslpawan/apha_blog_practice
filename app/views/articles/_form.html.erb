<% if @article.errors.any? %>
    <ul>
        <% @article.errors.full_messages.each do |e| %>
            <li>
                <%= e %>
            </li>
            <% end %>
    </ul>
<% end %>

<%= form_with(model: @article, local: true) do |f| %>
    <p>
        <%= f.label :title %>
        <br>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :description %>
        <br>
        <%= f.text_area :description %>
    </p>
    <p>
        <%= f.label :category %>
        <br>
        <%= f.collection_select(:category_ids, Category.all, :id, :name, {:prompt => "Please Select a Category"}, {:multiple => true}) %>
    </p>
    <p>
        <%= f.submit %>
    </p>
    <%= link_to 'Back' , articles_path %>
<% end %>