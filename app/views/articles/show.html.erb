<h1>Showing Article</h1>

<p><strong>Title: </strong><%= @article.title %></p>
<p><strong>Description: </strong><%= @article.description %></p>
<p><strong>Creator: </strong><%= @article.user.username %> <%= link_to "View Profile", user_path(@article.user) %></p>
<% if @article.categories.any? %>
    <p>
        <strong>Cateogries: </strong>
    </p>
    <% @article.categories.each do |c| %>
        <div><%= c.name %></div>
    <% end %>
<% end %>