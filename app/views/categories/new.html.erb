<h1>Create new Category</h1>

<%= form_with(model: @category, local: true) do |f| %>
    <%= f.label :name %> <br>
    <%= f.text_field :name %> <br> <br>
    <%= f.submit %>
<% end %>
<br><br>
<h1>Categories List</h1>
<% @categories_list.each do |ctg| %>
    <div><%= ctg.name %></div>
<% end %>