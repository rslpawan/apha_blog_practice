<h1>Login</h1>

<%= form_with(scope: :session, url: login_path) do |f| %>

    <p>
        <%= f.label :email %> <br>
        <%= f.text_field :email %>
    </p>
    <p>
        <%= f.label :password %> <br>
        <%= f.text_field :password %>
    </p>
    <p>
        <%= f.submit 'Log in' %> <br>
    </p>

<% end %>

<br><br>

<%= link_to 'Create new account', new_user_path %>